<body onLoad="resizewindow(450,590);">
<span class="button" onclick="format();">整理</span>
<span class="button" onclick="shuffle();" onMouseUp="this.blur();">乱序</span>
<span class="button" onclick="group();" onMouseUp="this.blur();">分组</span>
<input type="text" id="groupnum" value="2">
<span class="button" onclick="copyresult();" onMouseUp="this.blur();">复制</span>
<span class="button" onclick="paste();" onMouseUp="this.blur();">粘贴</span>
<textarea id="textarea">
921439818+尸体
405973386+尼亚
512544046+侠客
</textarea>
<div id="statusbar">大家好我是新人</div>


<script type="text/javascript">
tab="	";
var widthfix;
var heightfix;
var textarea=document.getElementById("textarea");
var statusbar=document.getElementById("statusbar");
var groupnum=document.getElementById("groupnum");

function resizewindow(width,height)
{
if (!widthfix)
{
window.resizeTo(width+100,height+100);
widthfix=width+100-window.document.body.clientWidth;
heightfix=height+100-window.document.body.clientHeight
}
window.resizeTo(width+widthfix,height+heightfix);
}

function format()
{
list=new Array();
list=textarea.value.split("\n");
list2=new Array();

for(i=0;i<list.length;i++)
	{
	if (list[i]=="") continue;
	list2[list2.length]=list[i];
	}

for(i=0;i<list2.length;i++)
	{
	n=0;
	for(j=0;j<list.length;j++)
		{
		a=list[j];
		b=list2[i];
		if(a==b && a!="")
			{
			n=n+1;
			}
		}
	if(n>1)
		{
		alert("有"+n+"个相同信息："+list2[i]);
		for(j=0;j<list.length;j++)
			{
			if(list2[i]==list[j])
				{
				list[j]="";
				}
			}
		}
	}

textarea.value="";
for(i=0;i<list2.length;i++)
	{
	textarea.value=textarea.value+list2[i]+"\n";
	}

statusbar.innerHTML="共有"+list2.length+"条信息。";
}

function shuffle()
{
//alert(textarea.value);
list=textarea.value.split("\n");
textarea.value="";
for(i=1;i<=500;i++)
	{
	a=Math.floor(Math.random()*list.length);
	b=Math.floor(Math.random()*list.length);
	tmp=list[a];
	list[a]=list[b];
	list[b]=tmp;
	}
for(i=0;i<list.length;i++)
	{
	textarea.value=textarea.value+ ((list[i] != "") ? (list[i]+"\n") : "");
	}
}

function group()
{
num=groupnum.value;
shuffle();
list2=new Array();
list2=textarea.value.split("\n");
list=new Array();
for(i=0;i<list2.length;i++)
	{
	if (list2[i]=="") continue;
	list[list.length]=list2[i];
	}

groups=new Array();
for(i=0;i<Math.ceil(list.length/num);i++)
	{
	groups[i]="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz一二三四五六七八九十甲乙丙丁戊己庚辛壬癸子丑寅卯辰巳午未申酉戌亥".substr(i,1);
	}

textarea.value="";

for(i=0;i<groups.length;i++)
	{
	textarea.value=textarea.value+"["+groups[i]+"]组：\n";
	for(j=0;j<num;j++)
		{
		textarea.value=textarea.value+"   ["+(j+1)+"号]"+((list.length) ? list.pop() : "轮空")+"\n";
		}
	}
}

function copyresult()
{
window.clipboardData.setData("Text",textarea.value);
statusbar.innerHTML="已复制到剪贴板。";
}

function paste()
{
tmp=window.clipboardData.getData("Text");
textarea.value=textarea.value+tmp+"\n";
}
</script>
